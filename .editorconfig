#Se recomienda para una sola configuración
# Esta configuración formateara a nuestro editor para que nuestro editor funcione de una misma manera
# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.js]
quote_type = single

[*.md]
max_line_length = off
trim_trailing_whitespace = false
